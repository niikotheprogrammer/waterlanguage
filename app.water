call Hello from Waterloo!

save btn = element btnClick
save input = element inputText
save txt = element textDisplay
save box = element box

button action btn {
  call Button clicked!
  setText txt = "You typed: " + input.value
  fadeOut {box} {1000}
  wait 500
  fadeIn {box} {1000}
}

input action input {
  if input.value == "hi" then (
    setText txt = "You typed hi!"
  )
}
